{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "adminUsername": {
      "type": "string"
    },
    "adminPassword": {
      "type": "securestring"
    },
    "storageaccountname": {
      "type": "string",
      "defaultValue": "pocsa21"
    },
    "virtualMachineName": {
      "type": "string"
    },
    "virtualMachineSize": {
      "type": "string"
    },
    "publicIPAddressName": {
      "type": "string"
    },
    "vnetName": {
      "type": "string"
    },
    "subnet1Name": {
      "type": "string"
    },   
    "ipconfig": {
      "type": "string"
    },
    "windowsOSVersion": {
      "type": "string",
      "defaultValue": "2016-Datacenter",
      "allowedValues": [
        "2008-R2-SP1",
        "2012-Datacenter",
        "2012-R2-Datacenter",
        "2016-Nano-Server",
        "2016-Datacenter-with-Containers",
        "2016-Datacenter"
      ]
    }
  },
  "variables": {
    "nic1": "[concat(uniquestring(resourceGroup().id), 'nic11')]",
    "publicIPAddressName": "[parameters('publicIPAddressName')]",
    "ipConfig": "[parameters('ipconfig')]",
    "storageAccountName": "[parameters('storageaccountname')]",
    "vnetID": "[resourceId('Microsoft.Network/virtualNetworks',variables('virtualNetworkName'))]",
    "subnet1Name": "[parameters('subnet1Name')]",
    "subnet1Ref": "[concat(variables('vnetID'),'/subnets/',variables('subnet1Name'))]",    
    "virtualNetworkName": "[parameters('vnetName')]",
    "vmName": "[parameters('virtualMachineName')]"
  },
  "resources": [
    {
      "apiVersion": "2017-06-01",
      "location": "[resourceGroup().location]",
      "name": "[variables('publicIPAddressName')]",      
      "properties": {
        "publicIPAllocationMethod": "Dynamic"
      },
      "type": "Microsoft.Network/publicIPAddresses"
    },
    {
      "name": "[variables('nic1')]",
      "type": "Microsoft.Network/networkInterfaces",
      "apiVersion": "2017-06-01",
      "location": "[resourceGroup().location]",    
      "dependsOn": [
        "[variables('publicIPAddressName')]"
      ],
      "properties": {
        "ipConfigurations": [
          {
            "name": "[variables('ipConfig')]",
            "properties": {
              "subnet": {
                "id": "[variables('subnet1Ref')]"
              },
              "privateIPAllocationMethod": "Dynamic",
              "publicIpAddress": {
                "id": "[resourceId('Microsoft.Network/publicIpAddresses', variables('publicIpAddressName'))]"
              }
            }
          }
        ]
      }
    },
    {
      "apiVersion": "2017-03-30",
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[variables('vmName')]",
      "location": "[resourceGroup().location]",     
      "dependsOn": [
        "[variables('nic1')]",
        "[variables('publicIPAddressName')]"
      ],
      "properties": {
        "hardwareProfile": {
          "vmSize": "[parameters('virtualMachineSize')]"
        },
        "osProfile": {
          "computerName": "[parameters('virtualMachineName')]",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPassword')]",
          "windowsConfiguration": {
            "provisionVmAgent": "true"
          }
        },
        "storageProfile": {
          "osDisk": {
            "osType": "Windows",
            "name": "ConvertedVHD",
            "createOption": "FromImage",
            "image": {
              "uri": "[concat('http://','wprodimage','.blob.core.windows.net/vhds/','ConvertedVHD.vhd')]"
            },
            "vhd": {
              "uri": "[concat('http://',parameters('storageAccountName'),'.blob.core.windows.net/imgvhd/','img-osDisk.vhd')]"
            },
            "caching": "ReadWrite",
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "properties": {
                "primary": true
              },
              "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('nic1'))]"
            }
          ]
        }
      }
    }
  ],
  "outputs": { }
}
